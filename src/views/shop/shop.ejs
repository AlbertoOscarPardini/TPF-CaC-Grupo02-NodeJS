<%- include('../partials/header') %>

<main class="container" id="shop">

    <aside class="shop__filters filters">
      <div class="filters__search">
        <label class="filters__title" for="search">BUSCAR</label>
        <input
          type="text"
          name="search"
          id="search"
          placeholder="item o categorÃ­a"
        />
      </div>

      <div class="filters__order">
        <label class="filters__title" for="orderby">ORDENAR POR</label>
        <select name="orderby" id="orderby" placeholder="Menor a mayor">
          <option value="az">A-Z</option>
          <option value="za">Z-A</option>
          <option value="desc">Mayor precio</option>
          <option value="asc">Menor precio</option>
        </select>
      </div>

      <div class="filters__price">
        <span class="filters__title">PRECIO</span>
        <div>
          <label for="min">MIN</label>
          <input type="number" name="Min" id="" placeholder="0" />
          <label for="min">- MAX</label>
          <input type="number" name="Max" id="" placeholder="0" />
        </div>
      </div>

      <div class="filters__check">
        <span class="filters__title" for="filter">FILTRAR</span>
        
        <div>
          <input type="checkbox" name="Filtrar" id="news" />
          <label for="Nuevos">NUEVOS</label>
        </div>

        <div>
          <input type="checkbox" name="Filtrar" id="offers" />
          <label for="offers">OFERTAS</label>
        </div>

        <div>
          <input type="checkbox" name="Filtrar" id="specials" />
          <label for="specials">EDICION ESPECIAL</label>
        </div>

        <div>
          <input type="checkbox" name="Filtrar" id="favs" />
          <label for="favs">FAVORITOS</label>
        </div>
      </div>

    </aside>

    <section class="shop__content">
      <ul class="shop__items">

        <% items.forEach(item => { %>

          <li class="shop__item">
            <article class="card-item">
              <a class="card-item__link" href="/shop/item/<%= item.item_id %>">
                <picture class="card-item__cover">
                  <span class="card-item__tag">Nuevo</span>
                  <img class="card-item__img--front" src="<%= item.image_front %>" alt="<%= item.product_description %>">
                  <img class="card-item__img--back" src="<%= item.image_back %>" alt="<%= item.product_description %> en caja">
                </picture>
                <div class="card-item__content">
                  <p class="card-item__licence"><%= item.licence_name %></p>
                  <h4 class="card-item__name"><%= item.product_name %></h4>
                  <p class="card-item__price"><%= item.price %></p>
                  <p class="card-item__promo"><%= item.dues %></p>
                </div>
              </a>
            </article>
          </li>

        <% }); %>

      </ul>

      <div class="pagination">
        <a class="pagination__link" href="shop.html"><</a>
        <a class="pagination__link pagination__link--selected" href="shop.html">1</a>
        <a class="pagination__link" href="shop.html">2</a>
        <a class="pagination__link" href="shop.html">3</a>
        <a class="pagination__link" href="shop.html">4</a>
        <a class="pagination__link" href="shop.html">5</a>
        <a class="pagination__link" href="shop.html">></a>
      </div>

    </section>

  </main>

  <%- include('../partials/footer') %>